      .count-items__wrap
        mixin item(title,desc,link)
          .count-items__item 
            .count-items__count 0
            p!=title
            .count-items__hiddent 
              .count-items__count 0
              p!=title
                .count-items__desc
                  p=desc 
                  a(href=link) Learn More  
                    svg.icon
                      use(xlink:href='#arrow')
